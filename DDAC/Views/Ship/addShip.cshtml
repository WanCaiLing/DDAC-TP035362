@using System.Web.UI.WebControls
@model DDAC.Models.Ship

@{
    ViewBag.Title = "addShip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/jqueryval")

<h2>Add Ship</h2>


@using (Html.BeginForm("createShip", "Ship", FormMethod.Post))
{

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="container">

        <div class="form-group">
            @Html.LabelFor(m => m.ShipName)
            @Html.EditorFor(m => m.ShipName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ship Name" } })
            @Html.ValidationMessageFor(m => m.ShipName, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ShipStartingPoint)
            @Html.EditorFor(m => m.ShipStartingPoint, new { htmlAttributes = new { @class = "form-control", placeholder = "Shipping Starting Point" } })
            @Html.ValidationMessageFor(m => m.ShipStartingPoint, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.ShipDestination)
            @Html.EditorFor(m => m.ShipDestination, new { htmlAttributes = new { @class = "form-control", placeholder = "Shipping destination" } })
            @Html.ValidationMessageFor(m => m.ShipDestination, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CargoSize)
            @Html.EditorFor(m => m.CargoSize, new { htmlAttributes = new { @class = "form-control", placeholder = "The Size of Cargo" } })
            @Html.ValidationMessageFor(m => m.CargoSize, "", new { @class = "text-danger" })

        </div>


        <input id="submitBtn" type="submit" class="btn btn-primary" value="Submit" />

    </div>



}


